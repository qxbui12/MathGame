<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.userpc.braintrainer.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="115dp"
        android:layout_marginTop="132dp"
        android:layout_below="@+id/scoreTrackTextView"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <Button
            android:id="@+id/bottomRightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@android:color/holo_orange_light"
            android:onClick="checkAnswer"
            android:text="Button" />

        <Button
            android:id="@+id/bottomLeftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@android:color/holo_blue_bright"
            android:onClick="checkAnswer"
            android:text="Button" />

        <Button
            android:id="@+id/topLeftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@android:color/holo_red_dark"
            android:onClick="checkAnswer"
            android:text="Button" />

        <Button
            android:id="@+id/topRightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@android:color/holo_green_light"
            android:onClick="checkAnswer"
            android:text="Button" />
    </GridLayout>

    <TextView
        android:id="@+id/scoreTrackTextView"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/answerCheckTextView"
        android:background="?android:attr/textColorLinkInverse"
        android:text="0/0"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/remainTimeTextView"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:background="@android:color/holo_purple"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/answerCheckTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="TextView"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="269dp" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="32dp"
        android:layout_below="@+id/scoreTrackTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

</android.widget.RelativeLayout>
